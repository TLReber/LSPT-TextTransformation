{
    "BaseUrl": "https://www.cs.rpi.edu/lspt-fall-19/text-transformers",
    "Version": 1.0,
    "Endpoints": [
        {
            "Verb": "POST",
            "Route": "/transform",
            "Body": [
                {
                    "Key": "type",
                    "Type": "string",
                    "Required": true
                },
                {
                    "Key": "data",
                    "Type": "string",
                    "Required": true
                },
                {
                    "Key": "filters",
                    "Type": "list of strings",
                    "Required": true
                },
                {
                    "Key": "targets",
                    "Type": "list of strings",
                    "Required": true
                }
            ]
        }
    ]
}
